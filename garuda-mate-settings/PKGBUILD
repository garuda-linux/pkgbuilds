pkgname=garuda-mate-settings
pkgdesc='Garuda Linux Mate settings'
pkgver=1.5.2
pkgrel=3
arch=('any')
url="https://gitlab.com/garuda-linux/themes-and-settings/settings/$pkgname"
license=('GPL')
makedepends=('coreutils')
source=("https://gitlab.com/garuda-linux/themes-and-settings/settings/garuda-mate-settings/-/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('SKIP')
depends=(
	'adapta-gtk-theme'
	'beautyline'
	'boston-icon-theme'
	'garuda-backgrounds'
	'garuda-common-settings'
	'garuda-fish-config'
	'kvantum'
	'plasma5-themes-sweet-full-git'
	'ttf-firacode-nerd'
	'yaru-icon-theme'
)
provides=('garuda-desktop-settings')
conflicts=('garuda-desktop-settings')
install=$pkgname.install

package() {
	install -d "$pkgdir"/etc
	cp -rf "$srcdir"/$pkgname-$_commit/etc "$pkgdir"
	install -d "$pkgdir"/usr
	cp -rf "$srcdir"/$pkgname-$_commit/usr "$pkgdir"
}
