pkgname=garuda-starship-prompt
pkgver=1.0.4
pkgrel=1
pkgdesc="Starship terminal prompt preset for Garuda Linux"
arch=(any)
url="https://gitlab.com/garuda-linux/themes-and-settings/settings/$pkgname"
license=('MIT')
depends=('starship')
makedepends=('git')
source=('starship.toml')
sha256sums=('1e0f834130db67b1335e9724a8a783c5a6c9f30074dcd8eb82672e0bda0dbcd5')

package() {
	install -D -m644 starship.toml "$pkgdir/etc/skel/.config/starship.toml"
}
