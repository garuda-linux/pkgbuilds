pkgname=garuda-update
pkgdesc="The Garuda Linux update command, in a separate package to allow separate updating"
pkgver=5.4.2
pkgrel=1
arch=('any')
license=('GPL')
depends=('coreutils' 'sed' 'gawk' 'pacman' 'wget')
backup=(etc/garuda/garuda-update/config)
source=("auto-pacman"
  "config"
  "garuda-update"
  "help"
  "logrotate"
  "main-update"
  "update-helper-scripts")
sha512sums=('aad66f3937bb291481c61313c0bbf62376298ed0800660a1c23145cd995f00e277afc021f22fe248779250ccad05081f99fdf41eb5fda59acc72e3e6969542a8'
