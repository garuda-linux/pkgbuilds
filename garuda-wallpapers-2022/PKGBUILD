# Maintainer: dr460nf1r3 <dr460nf1r3 at garudalinux dot org>

pkgname=garuda-wallpapers-2022
pkgver=r6.c246b87
pkgrel=1
pkgdesc="Wallpaper collection, 2022 edition"
arch=('any')
url="https://gitlab.com/garuda-linux/themes-and-settings/artwork/garuda-wallpapers-2022"
license=('GPLv3')
makedepends=('git')
depends=()
source=("git+https://gitlab.com/garuda-linux/themes-and-settings/artwork/garuda-wallpapers-2022.git")
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/garuda-wallpapers-2022"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd ${pkgname}
	install -d ${pkgdir}/usr/share/wallpapers/garuda-wallpapers
	cp -r src/garuda-wallpapers/* ${pkgdir}/usr/share/wallpapers/garuda-wallpapers
}
